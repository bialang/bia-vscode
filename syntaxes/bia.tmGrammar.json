{
	"scopeName": "source.bia",
	"fileTypes": [
		"bia"
	],
	"patterns": [
		{
			"name": "comment.line.double-slash",
			"match": "//.*?$"
		},
		{
			"name": "comment",
			"begin": "/\\*",
			"end": "\\*/"
		},
		{
			"name": "keyword",
			"match": "import|let|fun|return|if|else|while|for|continue|break"
		},
		{
			"name": "keyword.letter",
			"match": "not|and|or|in|[-+*/%|&^~]"
		},
		{
			"name": "constant.language",
			"match": "true|false"
		},
		{
			"name": "constant.numeric",
			"match": "0([xX][0-9a-fA-F]+|[bB][01]+|[0-7]+)|(0|[1-9]\\d*)\\.\\d*|0|[1-9]\\d*"
		},
		{
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				},
				{
					"match": "[^\\\\\"]+"
				}
			]
		},
		{
			"name": "string.regexp",
			"begin": "r\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				},
				{
					"match": "[^\\\\\"]+"
				}
			]
		},
		{
			"name": "punctuation",
			"match": "[{}.;(),]"
		},
		{
			"name": "variable",
			"match": "[a-zA-Z_][a-zA-Z0-9_]*"
		}
	]
}
